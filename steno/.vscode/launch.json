  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "preLaunchTask": "build",
      "name": "Launch in Record Mode",
      "program": "${workspaceRoot}/bin/steno",
      "args": [
        "--record"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "preLaunchTask": "build",
      "name": "Launch in Replay Mode",
      "program": "${workspaceRoot}/bin/steno",
      "args": [
        "--replay"
      ]
    }
  ]
}
